<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_login"
        tools:context="com.fangzuo.assist.Activity.SplashActivity">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_login"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#004052b5">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="小助手"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />
        </android.support.v7.widget.CardView>


        <!--<Button-->
        <!--android:layout_centerVertical="true"-->
        <!--android:id="@+id/btn_register"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="注册申请"/>-->

        <!--<TextView-->
        <!--android:id="@+id/tv_code"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="20sp"-->
        <!--android:layout_below="@id/btn_register"/>-->
        <ImageView
            android:id="@+id/iv_try"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/gettry"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#8bb9b6b6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_try"
                    android:text="试用"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#dd646060"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#dd646060"
                    android:id="@+id/ipchange"
                    android:text="修改IP地址"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <!--<Button-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="2"-->
                    <!--android:background="@drawable/btn_login"-->
                    <!--android:text="试用"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="25sp" />-->

                <!--<Button-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_weight="9"-->
                    <!--android:background="@drawable/btn_login"-->
                    <!--android:text="注册申请"-->
                    <!--android:textColor="@color/white"-->
                    <!--android:textSize="25sp" />-->

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_btn"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:text="注册码"
            android:textColor="#868484"
            android:textSize="23sp" />
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sp_pda"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_above="@+id/tv_code"
            android:layout_centerHorizontal="true"
            android:background="@drawable/spinner_pda_drop_down_shape"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_login"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_login"
            android:padding="10dp"
            android:text="注册申请"
            android:textColor="@color/white" />
        <!--<Button-->
        <!--android:id="@+id/ipchange"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="更改IP"/>-->

    </RelativeLayout>
</layout>