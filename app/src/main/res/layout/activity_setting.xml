<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fangzuo.assist.Activity.SettingActivity">
    <include layout="@layout/top_bar"
        android:id="@+id/toolbar"
        />

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/rl"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#efeceded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll1"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:weightSum="7"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="服务器:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:text="192.168.0.166"
                    android:singleLine="true"
                    android:id="@+id/ed_serverip"
                    android:layout_width="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_shape"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="端口:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:text="1433"
                    android:singleLine="true"
                    android:id="@+id/ed_port"
                    android:layout_width="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_below="@id/ll1"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:weightSum="7"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="用户名:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:text="sa"
                    android:singleLine="true"
                    android:id="@+id/ed_username"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_margin="1dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_shape"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="密码:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:text="Abc123"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:id="@+id/ed_pass"
                    android:layout_width="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_below="@id/ll2"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="连接"
                    android:background="@drawable/btn_login"

                    android:layout_marginRight="1dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_prop"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="配置"
                    android:background="@drawable/btn_login"

                    android:layout_marginRight="1dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btn_download"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="下载"
                    android:background="@drawable/btn_login"

                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tvtiti"
            android:text="账套选择："
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#79707070"
            android:layout_below="@+id/tvtiti"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/tvtiti"
            android:id="@+id/ry_data_search"
            android:layout_width="match_parent"
            android:layout_above="@id/rl"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

        <HorizontalScrollView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_above="@id/rl"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lv_database"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </HorizontalScrollView>


    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent"></android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
